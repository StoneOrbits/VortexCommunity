<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="dark-theme">
    <%- include('partials/header') %>
    <%- include('partials/nav') %>
    <main>
        <section class="showcase">
            <h2>Welcome to Vortex Community</h2>
            <header>
              <% if (user) { %>
              <p>Welcome, <%= user.username %>!</p>
              <% } else { %>
              <p>Welcome, Guest!</p>
              <% } %>
            </header>
            <p>Explore, upload, and share your favorite modes. Join the community and contribute to the ever-growing collection of creative content.</p>
            <h3>Top Upvoted Modes</h3>
            <div class="mode-list">
                <% topModes.forEach(mode => { %>
                    <%- include('partials/mode-tile', { mode: mode }) %>
                <% }); %>
            </div>
        </section>
    </main>
    <script src="/js/VortexLib.js" type="module"></script>
    <script src="/js/Lightshow.js" type="module"></script>
    <script src="/js/initLightshow.js" type="module"></script>
    <%- include('partials/footer') %>
</body>
</html>

