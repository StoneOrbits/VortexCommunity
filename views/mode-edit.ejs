<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="dark-theme">
    <%- include('partials/header') %>
    <%- include('partials/nav') %>
    <main>
        <section class="mode-edit-page">
            <h2>Edit Mode: <%= mode.name %></h2>
            <form action="/modes/<%= mode._id %>/edit" method="post">
                <div class="form-group">
                    <label for="modeName">Name:</label>
                    <input type="text" id="modeName" name="modeName" value="<%= mode.name %>" required>
                </div>
                <div class="form-group">
                    <label for="modeDescription">Description:</label>
                    <textarea id="modeDescription" name="modeDescription" rows="4" required><%= mode.description %></textarea>
                </div>
                <!-- Add more fields here as needed -->
                <div class="form-group">
                    <button type="submit">Save Changes</button>
                    <a href="/modes/<%= mode._id %>">Cancel</a>
                </div>
            </form>
        </section>
    </main>
    <%- include('partials/footer') %>
    <%- include('partials/script') %>
</body>
</html>

