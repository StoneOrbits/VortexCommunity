<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="dark-theme">
  <%- include('partials/header') %>
  <%- include('partials/nav') %>
  <main class="main-container">
    <section class="mode-edit-page">
      <h2>Edit Mode: <%= mode.name %></h2>
      <form action="/mode/<%= mode._id %>/edit" method="post">
        <div class="form-group">
          <label for="modeName">Mode Name</label>
          <input type="text" id="modeName" name="modeName" value="<%= mode.name %>">
        </div>
        <div class="form-group">
          <label for="modeDescription">Description</label>
          <textarea id="modeDescription" name="modeDescription"><%= mode.description %></textarea>
        </div>
        <button type="submit" class="button">Save Changes</button>
      </form>
    </section>
  </main>
  <%- include('partials/footer') %>
  <%- include('partials/script') %>
</body>
</html>

