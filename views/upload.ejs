<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="dark-theme">
    <%- include('partials/header') %>
    <%- include('partials/nav') %>
    <main>
        <div class="container">
            <form action="/upload" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="modeName">Mode Name:</label>
                    <input type="text" id="modeName" name="modeName" required>
                </div>
                
                <div class="form-group">
                    <label for="modeDescription">Description:</label>
                    <textarea id="modeDescription" name="modeDescription" rows="4" required></textarea>
                </div>
                
                <div class="form-group">
                    <label for="modeFile">Upload Mode File:</label>
                    <input type="file" id="modeFile" name="modeFile" accept=".vtxmode" required>
                </div>
                
                <div class="form-group">
                    <button type="submit">Upload</button>
                </div>
            </form>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>
</html>

