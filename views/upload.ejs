<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>
<body class="dark-theme">
    <%- include('partials/header') %>
    <%- include('partials/nav') %>
    <main>
        <div class="container">
            <section class="login-section">
                <form id="uploadForm" action="/upload" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="modeFile">Upload Mode File:</label>
                        <input type="file" id="modeFile" name="modeFile" accept=".vtxmode" required>
                    </div>
                    <div class="form-group">
                      <button class="g-recaptcha" data-sitekey="6LebppMpAAAAALluxJhaPmEk_fw-H452QV1HoTwk" data-callback='onSubmit' data-action='submit'>Upload</button>
                    </div>
                </form>
            </section>
        </div>
    </main>
    <%- include('partials/footer') %>
    <%- include('partials/script') %>
    <script src="https://www.google.com/recaptcha/api.js"></script>
    <script>
      function onSubmit(token) {
        document.getElementById("uploadForm").submit();
      }
    </script>
</body>
</html>

